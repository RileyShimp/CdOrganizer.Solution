@{
  Layout = "_Layout";
}

@using CdOrganizer.Models;

<h1>Artists.</h1>

@if (@Model.Count == 0)
{
  <h3>No Artists have been added yet!</h3>
} 

@foreach (Artist artist in Model)
{
  <li>@Html.ActionLink($"{artist.Description}", "Details", new { id = artist.ArtistId })</li>
}

<p>@Html.ActionLink("Add new Artist", "Create")</p>
<p>@Html.ActionLink("Return", "Index", "Home")</p>